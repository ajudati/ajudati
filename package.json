    "@angular/platform-browser": "^2.0.0",
    "@angular/platform-browser-dynamic": "^2.0.0",
    "@angular/router": "^3.0.0",
    "angular2-in-memory-web-api": "github:angular/in-memory-web-api",
    "bcryptjs": "^2.3.0",
    "bootstrap": "^4.0.0-alpha.4",
    "koa": "^1.2.4",
    "koa-body": "^1.5.0",
    "koa-bodyparser": "^2.2.0",
    "koa-jwt": "^1.2.0",
    "koa-router": "^5.4.0",
    "koa-send": "^3.2.0",
    "koa-static": "^2.0.0",
    "mongoose": "^4.6.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-beta.12",
    "systemjs": "^0.19.38",
    "zone.js": "^0.6.23"
  },
