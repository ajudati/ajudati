{
  "name": "ajudati",
  "version": "0.0.1",
  "description": "Social Platform for IT Solutions",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "gulp": "gulp",
    "lite": "lite-server",
    "server:b": "tsc --p tsconfig.server.json",
    "server:w": "tsc --p tsconfig.server.json -w",
    "postinstall": "npm run typings -- install",
    "build": "tsc && npm run server:b",
    "build:w": "concurrently \"npm run tsc:w\" \"npm run server:w\"",
    "start": "npm run build && concurrently \"npm run tsc:w\" \"npm run server:w\" \"node -- server/server.js\"",
    "start-lite": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\"",
    "sass": "node-sass --include-path scss scss/ajudati.scss css/ajudati.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajudati/ajudati.git"
  },
  "keywords": [
    "HelpDesk",
    "IT",
    "Social",
    "Platform",
    "Technician"
  ],
  "author": "Anderson, Alex, Yara, Alberto, Fred, Let√≠cia, USP e FGV",
